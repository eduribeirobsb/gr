<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Contratos</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
  <h2>Cadastro de Contrato</h2>
  <form method="POST" action="/contratos/salvar">
    <div class="mb-3">
      <label>Número do PA</label>
      <input type="text" name="numero_pa" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Número do Contrato</label>
      <input type="text" name="numero_contrato" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Unidade</label>
      <input type="text" name="unidade" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Objeto</label>
      <textarea name="objeto" class="form-control" required></textarea>
    </div>
    <button class="btn btn-primary">Salvar Contrato</button>
  </form>

  <hr>

  <h4>Contratos Cadastrados</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>PA</th>
        <th>Contrato</th>
        <th>Unidade</th>
        <th>Objeto</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% contratos.forEach(c => { %>
        <tr>
          <td><%= c.numero_pa %></td>
          <td><%= c.numero_contrato %></td>
          <td><%= c.unidade %></td>
          <td><%= c.objeto %></td>
          <td>
            <a href="/riscos/cadastrar/<%= c.id %>" class="btn btn-sm btn-outline-primary">➕ Risco</a>
            <a href="/riscos/gerenciar/<%= c.id %>" class="btn btn-sm btn-outline-secondary ms-1">✏️ Gerenciar</a>
            <a href="/riscos/relatorio-pdf/<%= c.id %>" class="btn btn-sm btn-outline-success ms-1" target="_blank">📄 Baixar PDF</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
