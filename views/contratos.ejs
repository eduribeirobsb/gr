<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Contratos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body class="container mt-4">
  <h2>Contratos Cadastrados</h2>

  <a href="/contratos/novo" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Novo PA
  </a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>PA</th>
        <th>Número do Contrato</th>
        <th>Unidade</th>
        <th>Objeto</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% contratos.forEach(c => { %>
        <tr>
          <td><%= c.numero_pa %></td>
          <td><%= c.numero_contrato %></td>
          <td><%= c.unidade %></td>
          <td><%= c.objeto %></td>
          <td>
            <a href="/riscos/gerenciar/<%= c.id %>" class="btn btn-sm btn-primary mb-1">
              <i class="bi bi-shield-exclamation"></i> Riscos
            </a>
            <a href="/contratos/editar/<%= c.id %>" class="btn btn-sm btn-warning mb-1">
              <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a href="/riscos/relatorio/<%= c.id %>" target="_blank" class="btn btn-secondary btn-sm">
              <i class="bi bi-file-earmark-pdf"></i> Relatório
            </a>
            <a href="/contratos/excluir/<%= c.id %>" class="btn btn-sm btn-danger mb-1" onclick="return confirm('Tem certeza que deseja excluir este contrato?')">
              <i class="bi bi-trash"></i> Excluir
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
