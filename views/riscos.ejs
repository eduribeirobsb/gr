<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Cadastro de Riscos</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
  <h2>Cadastro de Risco</h2>
  <h5><strong>Contrato:</strong> <%= contrato.numero_contrato %> — <%= contrato.objeto %></h5>

  <form method="POST" action="/riscos/salvar">
    <input type="hidden" name="contrato_id" value="<%= contratoId %>">
    <div class="mb-3">
      <label>Risco</label>
      <input type="text" name="risco" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Causa</label>
      <input type="text" name="causa" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Consequência</label>
      <input type="text" name="consequencia" class="form-control" required>
    </div>
    <div class="row">
      <div class="col">
        <label>Probabilidade</label>
        <input type="number" name="probabilidade" min="1" max="5" class="form-control" required>
      </div>
      <div class="col">
        <label>Impacto</label>
        <input type="number" name="impacto" min="1" max="5" class="form-control" required>
      </div>
    </div>
    <button class="btn btn-primary mt-3">Salvar Risco</button>
  </form>

  <hr>
  <h4>Riscos Cadastrados</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Risco</th>
        <th>Causa</th>
        <th>Consequência</th>
        <th>Impacto</th>
        <th>Probabilidade</th>
        <th>NRI</th>
        <th>Data</th>
        <th>Alterado por</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% riscos.forEach(r => { %>
        <tr>
          <td><%= r.risco %></td>
          <td><%= r.causa %></td>
          <td><%= r.consequencia %></td>
          <td><%= r.impacto %></td>
          <td><%= r.probabilidade %></td>
          <td><%= r.nri %></td>
          <td><%= new Date(r.data_registro).toLocaleString('pt-BR') %></td>
          <td><%= r.alterado_por || '-' %></td>
          <td>
            <a href="/riscos/editar/<%= r.id %>" class="btn btn-sm btn-outline-secondary">✏️ Editar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
